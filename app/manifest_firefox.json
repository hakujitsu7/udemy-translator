{
    "manifest_version": 2,
    "name": "유데미 번역기",
    "version": "1.0",

    "description": "유데미 자막을 문장 단위로 번역해 주는 확장 프로그램입니다.",

    "applications": {
        "gecko": {
            "id": "{7398a597-f01b-4fc5-9fe1-9394abb47b02}"
        }
    },

    "background": {
        "scripts": ["../background.js"]
    },
    "browser_action": {
        "default_popup": "../popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.udemy.com/*"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "*://*.udemy.com/*",
        "*://vtt-b.udemycdn.com/*",
        "nativeMessaging",
        "storage",
        "tabs",
        "webRequest"
    ]
}