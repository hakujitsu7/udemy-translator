{
    "manifest_version": 3,
    "name": "유데미 번역기",
    "version": "1.0",

    "description": "유데미 자막을 문장 단위로 번역해 주는 확장 프로그램입니다.",
    "icons": {
        "64": "icons/icon.png"
    },

    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.udemy.com/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "*://*.udemy.com/*",
        "*://vtt-b.udemycdn.com/*"
    ],
    "permissions": [
        "nativeMessaging",
        "storage",
        "tabs",
        "webRequest"
    ]
}