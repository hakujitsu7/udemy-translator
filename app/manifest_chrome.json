{
    "manifest_version": 3,
    "name": "Udemy Translator",
    "version": "1.0",

    "description": "Udemy Translator",

    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.udemy.com/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "*://*.udemy.com/*",
        "*://vtt-b.udemycdn.com/*"
    ],
    "permissions": [
        "nativeMessaging",
        "storage",
        "tabs",
        "webRequest"
    ]
}